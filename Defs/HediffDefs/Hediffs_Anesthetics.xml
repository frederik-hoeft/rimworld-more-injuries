            <tickInterval>2000</tickInterval>
            <sendLetterWhenDiscovered>true</sendLetterWhenDiscovered>
            <chanceModifiers>
              <li Class="MoreInjuries.HealthConditions.Secondary.Handlers.ChanceModifiers.HediffChanceModifier_DisallowDeathResting"></li>
              <li Class="MoreInjuries.HealthConditions.Secondary.Handlers.ChanceModifiers.HediffChanceModifier_MeanTimeBetween_SimpleCurve">
                <mttfDaysBySeverity>
                  <points>
                    <li>0, 10</li>
                    <li>0.4, 1.5</li>
                    <li>0.6, 0.75</li>
                    <li>0.8, 0.25</li>
