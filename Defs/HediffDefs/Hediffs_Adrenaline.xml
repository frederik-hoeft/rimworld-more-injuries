<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- TODO: use secondary condition framework -->
  <HediffDef ParentName="DiseaseBase">
    <defName>AdrenalineRush</defName>
    <label>adrenaline rush</label>
    <labelNoun>an adrenaline rush</labelNoun>
    <description>A rush of adrenaline temporarily increases heart rate and blood pressure, providing a boost of energy and alertness. The body's fight-or-flight response is triggered, increasing strength and speed.
\nHowever, if the rush is too intense, it can cause anxiety, panic, and overdose symptoms such as dizziness, double vision, and nausea. In extreme overdose cases, the body can go into shock, causing heart attack, stroke, or death.</description>
    <defaultLabelColor>(25, 255, 136)</defaultLabelColor>
    <maxSeverity>5</maxSeverity>
    <isBad>false</isBad>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-6</severityPerDay>
        <showHoursToRecover>true</showHoursToRecover>
      </li>
    </comps>
    <stages>
      <li>
        <label>initial</label>
        <painFactor>0.95</painFactor>
        <painOffset>-0.05</painOffset>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>0.05</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>0.05</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>minor</label>
        <minSeverity>0.2</minSeverity>
        <painFactor>0.95</painFactor>
        <painOffset>-0.10</painOffset>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>0.1</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>0.075</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>moderate</label>
        <minSeverity>0.4</minSeverity>
        <painFactor>0.9</painFactor>
        <painOffset>-0.10</painOffset>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>0.125</offset>  
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>0.1</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>severe</label>
        <minSeverity>0.6</minSeverity>
        <painFactor>0.875</painFactor>
        <painOffset>-0.1</painOffset>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>0.15</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>0.125</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>very severe</label>
        <minSeverity>0.8</minSeverity>
        <painFactor>0.85</painFactor>
        <painOffset>-0.15</painOffset>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>0.15</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>0.15</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>extreme</label>
        <minSeverity>1</minSeverity>
        <painFactor>0.8</painFactor>
        <painOffset>-0.2</painOffset>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>0.2</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>0.3</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.15</offset>
          </li>
          <li>
            <capacity>Sight</capacity>
            <offset>-0.1</offset>
          </li>
        </capMods>
        <mentalStateGivers>
          <li>
            <mentalState>Wander_OwnRoom</mentalState>
            <mtbDays>3</mtbDays>
          </li>
        </mentalStateGivers>
      </li>
      <li>
        <label>overdosing (minor)</label>
        <minSeverity>1.75</minSeverity>
        <painFactor>0.7</painFactor>
        <painOffset>-0.3</painOffset>
        <vomitMtbDays>0.5</vomitMtbDays>
        <lifeThreatening>true</lifeThreatening>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>0.1</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.1</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.4</offset>
          </li>
          <li>
            <capacity>Sight</capacity>
            <offset>-0.25</offset>
          </li>
        </capMods>
        <hediffGivers>
          <li Class="HediffGiver_Random">
            <hediff>CardiacArrest</hediff>
            <mtbDays>1.5</mtbDays>
            <partsToAffect>
              <li>Heart</li>
            </partsToAffect>
          </li>
          <li Class="HediffGiver_Random">
            <hediff>HemorrhagicStroke</hediff>
            <mtbDays>4.5</mtbDays>
            <partsToAffect>
              <li>Brain</li>
            </partsToAffect>
          </li>
        </hediffGivers>
        <mentalStateGivers>
          <li>
            <mentalState>Wander_OwnRoom</mentalState>
            <mtbDays>0.5</mtbDays>
          </li>
        </mentalStateGivers>
      </li>
      <li>
        <label>overdosing (severe)</label>
        <minSeverity>2</minSeverity>
        <painFactor>0.6</painFactor>
        <painOffset>-0.4</painOffset>
        <vomitMtbDays>0.25</vomitMtbDays>
        <lifeThreatening>true</lifeThreatening>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.1</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.5</setMax>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.5</offset>
          </li>
          <li>
            <capacity>Sight</capacity>
            <offset>-0.5</offset>
          </li>
          <li>
            <capacity>Hearing</capacity>
            <offset>-0.25</offset>
          </li>
        </capMods>
        <hediffGivers>
          <li Class="HediffGiver_Random">
            <hediff>CardiacArrest</hediff>
            <mtbDays>0.75</mtbDays>
            <partsToAffect>
              <li>Heart</li>
            </partsToAffect>
          </li>
          <li Class="HediffGiver_Random">
            <hediff>HemorrhagicStroke</hediff>
            <mtbDays>2.25</mtbDays>
            <partsToAffect>
              <li>Brain</li>
            </partsToAffect>
          </li>
        </hediffGivers>
        <mentalStateGivers>
          <li>
            <mentalState>Wander_OwnRoom</mentalState>
            <mtbDays>0.25</mtbDays>
          </li>
        </mentalStateGivers>
      </li>
      <li>
        <label>overdosing (extreme)</label>
        <minSeverity>2.25</minSeverity>
        <lifeThreatening>true</lifeThreatening>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.01</setMax>
          </li>
        </capMods>
        <hediffGivers>
          <li Class="HediffGiver_Random">
            <hediff>CardiacArrest</hediff>
            <mtbDays>0.25</mtbDays>
            <partsToAffect>
              <li>Heart</li>
            </partsToAffect>
          </li>
          <li Class="HediffGiver_Random">
            <hediff>HemorrhagicStroke</hediff>
            <mtbDays>0.75</mtbDays>
            <partsToAffect>
              <li>Brain</li>
            </partsToAffect>
          </li>
        </hediffGivers>
      </li>
    </stages>
  </HediffDef>
</Defs>