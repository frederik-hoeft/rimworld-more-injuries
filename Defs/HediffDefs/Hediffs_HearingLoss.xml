<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <HediffDef ParentName="DiseaseBase">
    <defName>HearingLossTemporary</defName>
    <label>temporary hearing loss</label>
    <description>Temporary deafness caused by prolonged exposure to loud noises, such as gunfire, explosions, or machinery. The hair cells in the inner ear are damaged, leading to hearing loss. The damage can become permanent if the exposure is severe or prolonged.</description>
    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(255, 169, 56)</defaultLabelColor>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-1</severityPerDay>
        <showHoursToRecover>true</showHoursToRecover>
      </li>
    </comps>
    <stages>
      <li>
        <minSeverity>0.10</minSeverity>
        <label>initial</label>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.02</offset>
          </li>
          <li>
            <capacity>Hearing</capacity>
            <offset>-0.15</offset>
          </li>
        </capMods>
        <painOffset>0.02</painOffset>
      </li>
      <li>
        <minSeverity>0.25</minSeverity>
        <label>moderate</label>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.05</offset>
          </li>
          <li>
            <capacity>Hearing</capacity>
            <offset>-0.20</offset>
          </li>
        </capMods>
        <painOffset>0.05</painOffset>
      </li>
      <li>
        <minSeverity>0.50</minSeverity>
        <label>severe</label>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.07</offset>
          </li>
          <li>
            <capacity>Hearing</capacity>
            <offset>-0.35</offset>
          </li>
        </capMods>
        <painOffset>0.15</painOffset>
      </li>
      <li>
        <minSeverity>0.75</minSeverity>
        <label>very severe</label>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.1</offset>
          </li>
          <li>
            <capacity>Hearing</capacity>
            <offset>-0.65</offset>
          </li>
        </capMods>
        <painOffset>0.20</painOffset>
      </li>
      <li>
        <minSeverity>0.95</minSeverity>
        <label>extreme</label>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.15</offset>
          </li>
          <li>
            <capacity>Hearing</capacity>
            <offset>-0.99</offset>
          </li>
        </capMods>
        <painOffset>0.25</painOffset>
      </li>
    </stages>
  </HediffDef>

  <MoreInjuries.Defs.ReferenceableDef>
    <defName>HearingLossVerbInfo</defName>
    <modExtensions>
      <li Class="MoreInjuries.HealthConditions.HearingLoss.HearingLossVerbInfoProperties_ModExtension">
        <supportedVerbBaseClasses>
          <li>Verse.Verb_Shoot</li>
        </supportedVerbBaseClasses>
      </li>
    </modExtensions>
  </MoreInjuries.Defs.ReferenceableDef>
</Defs>