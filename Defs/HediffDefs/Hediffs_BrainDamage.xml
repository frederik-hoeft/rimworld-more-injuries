<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <HediffDef>
    <defName>BrainDamage_MotorDysfunction</defName>
    <label>motor dysfunction</label>
    <description>Damage to the motor cortex caused by hypoxia. Impairs voluntary muscle control and coordination.</description>
    <isBad>true</isBad>
    <stages>
      <li>
        <label>minor</label>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.1</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>severe</label>
        <minSeverity>0.4</minSeverity>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.4</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.2</offset>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>
</Defs>